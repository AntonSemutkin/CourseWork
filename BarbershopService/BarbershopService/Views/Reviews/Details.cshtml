@model BarbershopService.Models.Review

@{
    ViewData["Title"] = "Details";
}

@using BarbershopService.HtmlHelpers

<h1>Подробная информация</h1>

<div>
    <h4>Отзыв</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientMark)
        </dt>
        <dd class="col-sm-10">
            @Html.CreateStars(Model.ClientMark)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceType.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Обновить</a> |
    <a asp-action="Index">Обратно к списку</a>
</div>
